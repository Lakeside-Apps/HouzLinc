<ContentControl
    x:Class="HouzLinc.Views.Devices.KeypadButtonPropertyHeaderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HouzLinc.Views.Devices"
    xmlns:vm="using:ViewModel.Devices"
    xmlns:links="using:HouzLinc.Views.Links"
    xmlns:ctl="using:HouzLinc.Controls"
    xmlns:utils="using:HouzLinc.Utils"
    xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <ContentControl.Resources>
        <utils:BoolToNullableBool x:Key="BoolToNullableBool"/>
    </ContentControl.Resources>

    <ContentControl.ContentTemplate>
        <DataTemplate x:DataType="vm:KeypadLincViewModel">
            <StackPanel>
                <TextBlock Text="Button Properties" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <TextBlock Margin="0,5,0,0"  Text="Select a button to view and edit its properties."/>
                <TextBlock Margin="0,5,0,0"  Text="Shift click another to make it follow on, follow off or not follow."/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,5,0,0" Text="Or pin a button "/>
                    <ToggleButton
                        Margin="5,0,0,0"
                        IsChecked="{x:Bind IsSetFollowBehaviorMode, Converter={StaticResource BoolToNullableBool}, Mode=TwoWay}"
                        Tag="Configure Followers"
                        win:ToolTipService.ToolTip="Pin Selected Button to Configure Followers">
                        <SymbolIcon Symbol="Pin"/>
                    </ToggleButton>
                    <TextBlock Margin="5,5,0,0" Text="and tap another to make it follow on, follow off or not follow."/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </ContentControl.ContentTemplate>
</ContentControl>
